.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

.user-info {
  background: #3963bc;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.info-right {
  display: flex;
  flex-direction: column;
}

.nickname {
  color: #fff;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.tips {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

.menu-list {
  background: #fff;
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
}

.arrow {
  color: #999;
  font-size: 32rpx;
}

.logout-area {
  padding: 40rpx 30rpx;
}

.logout-btn {
  width: 100% !important;
  background: #ff4d4f;
  color: #fff;
  border-radius: 40rpx;
} 