.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome {
  color: #333;
  font-size: 40rpx;
  margin-top: 20rpx;
}

.container {
  padding: 40rpx;
  box-sizing: border-box;
}

.word-card {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 60rpx;
}

.word {
  font-size: 60rpx;
  font-weight: bold;
  text-align: center;
  color: #333;
  margin-bottom: 20rpx;
}

.phonetic {
  font-size: 36rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.meaning {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
}

.operation-area {
  width: 100%;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.btn {
  width: 45% !important;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.wrong {
  background: #ff4d4f;
  color: #fff;
}

.correct {
  background: #52c41a;
  color: #fff;
}

.progress-bar {
  width: 100%;
}

.progress-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
} 